
<div class="banner">
  
  <h2 class="text-center">Posty - You've got mail!</h2>
  
  <p class="text-center">
    <% if !current_user %>
      <%= link_to 'Sign up', '/signup', class: "signup-button" %>
    <% end %>
  </p>
  
</div>

<div class="container">
  <div class="row">
  <% @posts.reverse_each do |post| %>
    <div class="<%= cycle('col-md-6 left-post', 'col-md-6 col-md-offset-6 right-post') %>">
      <div class="post">
        <p><%= post.created_at.to_formatted_s(:long)  %></p>
        <h2><%= post.title %></h2>
        <p><%= truncate(post.body, length: 50) %></p>
        <%= link_to "More", post_path(post) %>
        <p><%= post.comments.count %> Comments </p>
      </div>
    </div>
  <% end %>
  </div>
</div>