
<div class="banner">
  
  <h2 class="text-center">Posty - You've got mail!</h2>
  
  <p class="text-center"><%= link_to 'Sign up', '/signup', class: "signup-button" %></p>
  
</div>

<div class="container">
  <% @posts.reverse_each do |post| %>
    <h2><%= post.title %></h2>
    <%= truncate(post.body) %>
    <%= link_to "More", post_path(post) %>
  <% end %>
</div>